model User {
    id       Int     @id @default(autoincrement())
    email    String  @unique
    password String
    name     String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    role Role @default(USER)
}

enum Role {
    ADMIN
    USER
}

model Task {
    id          Int      @id @default(autoincrement())
    title       String
    description String?
    dueDate     DateTime
    Priority    Level    @default(LOW)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    userId      Int
    user        User     @relation(fields: [userId], references: [id])
}

enum Level {
    LOW
    MEDIUM
    HIGH
}